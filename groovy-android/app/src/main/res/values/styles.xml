<resources>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:colorBackground">@color/background_white</item>
    </style>

    <style name="Placeholder">
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/list_item_subtitle_text_size</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/background_list_item</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginRight">@dimen/list_item_sub_separator_margin</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
